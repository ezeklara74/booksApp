{
  "root": true,

  "env": {
    "browser": true
  },

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:jsx-ally/recommended",
    "prettier"
  ],

  "sttings": {
    "react": {
      "version": "detect"
    }
  },

  "overrides": [
    {
      "files": ["*.js", "*.jsx"]
    }
  ],

  "trailingComma": "all",
  "tabWidth": 2,
  "printWidth": 80,
  "semi": false,
  "jsxSingleQuote": true,
  "singleQuote": true
}
